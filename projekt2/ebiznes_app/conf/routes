
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Products

GET     /addproduct                 controllers.HomeController.addProduct
POST    /addproducthandle           controllers.HomeController.addProductHandle
GET     /updateproduct/:id          controllers.HomeController.updateProduct(id: Long)
POST    /updateproducthandle        controllers.HomeController.updateProductHandle

GET     /products                   controllers.HomeController.getProducts
GET     /product/:id                controllers.HomeController.getProduct(id: Long)
GET     /deleteproduct/:id          controllers.HomeController.deleteProduct(id: Long)

# Basket

GET     /addbasket                controllers.HomeController.addBasket
POST    /addbaskethandle           controllers.HomeController.addBasketHandle
GET     /updatebasket/:id          controllers.HomeController.updateBasket(id: Long)
POST    /updatebaskethandle        controllers.HomeController.updateBasketHandle

GET     /baskets                   controllers.HomeController.getBaskets
GET     /basket/:id                controllers.HomeController.getBasket(id: Long)
GET     /deletebasket/:id          controllers.HomeController.deleteBasket(id: Long)

# Opinion

