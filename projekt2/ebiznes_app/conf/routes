# Order

GET     /addorder                   controllers.HomeController.addOrder
POST    /addorderhandle             controllers.HomeController.addOrderHandle
GET     /updateorder/:id            controllers.HomeController.updateOrder(id: Long)
POST    /updateorderhandle          controllers.HomeController.updateOrderHandle

GET     /orders                     controllers.HomeController.getOrders
GET     /order/:id                  controllers.HomeController.getOrder(id: Long)
GET     /deleteorder/:id            controllers.HomeController.deleteOrder(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


      